//Count of camel case characters 

#include<iostream>
using namespace std;


 // } Driver Code Ends

class Solution
{
  public:   
    int countCamelCase (string s)
    {
    	//code here.
    	int count=0;
    	for(int i=0;i<s.length();i++){
    	    if(s[i]<92){
    	        cnt++;
    	    }
    	}return count;
    }
};

// { Driver Code Starts.

int main()
{
	int t; cin >> t;
	while (t--)
	{
		string s; cin >> s;
		Solution ob;
		cout <<ob.countCamelCase (s) << '\n';
	}
}
